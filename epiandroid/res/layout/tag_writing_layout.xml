<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

<LinearLayout
    android:id="@+id/layoutHorizontal1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewCurrentId"
            style="@style/ThemeTextLeftPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current ID" />

        <EditText
            android:id="@+id/editTextCurrentID"
            style="@style/ThemeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:hint="3 digit ID" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHorizonal2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >

        <TextView
            android:id="@+id/textViewLastId"
            style="@style/ThemeTextLeftPadding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_horizontal"
            android:text="Last ID" />

        <EditText
            android:id="@+id/editTextKast"
            style="@style/ThemeText"
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHorizontal3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewTagData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tag Data:1234567891011" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHorizontal4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:orientation="vertical">

        <Button
            android:id="@+id/btnWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write"/>

        <Button
            android:id="@+id/btnLogout"
            style="@style/ThemeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            
            android:text="Close" />
    </LinearLayout>

</LinearLayout>