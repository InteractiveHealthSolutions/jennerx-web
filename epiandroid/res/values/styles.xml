<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="ThemeText">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            #000000
        </item>
        <item name="android:paddingBottom">
            5px
        </item>
        <item name="android:paddingTop">
            5px
        </item>
                
    </style>
    <style name="ThemeTextLeftPadding">
        <item name="android:textSize">
            16sp
        </item>
                <item name="android:paddingBottom">
            5px
        </item>
        <item name="android:paddingLeft">
            5px
        </item>
        <item name="android:paddingTop">
            5px
        </item>
        
        <item name="android:textColor">
            #000000
        </item>
    </style>
    
    <style name="ThemeTextSmall">
        <item name="android:textSize">
            15sp
        </item>
        <item name="android:textColor">
            @color/BlueViolet
        </item>
        <item name="android:paddingBottom">
            5px
        </item>
        <item name="android:paddingTop">
            10px
        </item>
        
        <item name="android:paddingLeft">
            5px
        </item>
                
    </style>   
    
    
    <style name="HorizontalDividerLayout">
       <item name="android:paddingLeft"> 
           10sp
        </item>
        <item name="android:paddingRight"> 
           10sp
        </item>
        <item name="android:paddingTop"> 
           10sp
        </item> 
    </style>
    
    <style name="HorizontalDividerBar">
       <item name="android:layout_width">
           0dp
       </item>  
		<item name="android:layout_height">
		    2dip
		</item>
		<item name="android:background">
		    @color/Gray
		</item>			    							    
							    
    </style>
    
    <style name="VaccineCheckbox">
       
       <item name="android:layout_width">
           0dp
       </item>         
       
       <item name="android:layout_height">
           wrap_content
       </item>
       
       <item name="android:layout_weight"> 
        	1   
       </item>
       
    </style>
    
    <style name="VaccineCheckoxRow">
        <item name="android:layout_width">
            match_parent
        </item>
         
        <item name="android:layout_height">
            wrap_content
        </item>		        
        <item name="android:paddingLeft">
            10sp
        </item>       		        
        <item name="android:weightSum">
            3
        </item>
        <item name="android:orientation">
            horizontal
        </item>    
    </style>
    
    <style name="schedule_title">
        
        <item name="android:textSize">
            14dp
        </item>
        <item name="android:textStyle"
            >
            bold
        </item>
     </style>
    
    <style name="VaccineTitleRow">
        <item name="android:layout_height">wrap_content</item> 
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">15sp</item>       		        
        <item name="android:paddingLeft">10sp</item>       		        
    
    </style>
      <style name="btnStyDefault" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">10dip</item>
    </style>
</resources>