<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item  android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="15dip" />
             <stroke android:width="1dip" android:color="#CD98FE" />
             <gradient  android:angle="-90"  android:startColor="#CD98FE" android:endColor="#CD98FE"  />            
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="15dip" />
             <stroke android:width="1dip" android:color="#CD98FE" />
             <solid  android:color="#CD98FE"/>       
         </shape>
     </item>  
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="15dip" />
             <stroke android:width="1dip" android:color="#9797ff" />
             <gradient  android:angle="-90"  android:startColor="#9797ff"
                  android:endColor="#9797ff" />            
         </shape>
     </item>
</selector>